<% if !@myfile.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @myfile.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "well">
   <%= form_for @myfile, html: { multipart: true } do |f| %>
      <%= f.label :Название_прайса %>
      <%= f.text_field :name %>
      <%= f.label :Ид_прайса %>
      <%= f.text_field :vendor_id %>
       <%= f.label :Главный %>
      <%= f.check_box :main %>
      <%= f.label :Файл %>
      <%= f.file_field :attachment %>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>
